@model IEnumerable<RestaurantSys.Models.Dish>

@{
    ViewData["Title"] = "菜單一覽";
}

<h2 class="fw-bold">@ViewData["Title"]</h2>

<div class="container-fluid">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="card w-100 shadow-sm">
                    <div class="card-img-top-container text-center pt-3">
                        <img src="@Url.Content(item.PhotoPath)" class="card-img-top" alt="@item.DishName" style="max-height: 200px; object-fit: cover;">
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@Html.DisplayFor(modelItem => item.DishName)</h5>
                        <p class="card-text text-muted">@Html.DisplayFor(modelItem => item.Description)</p>

                        <div class="mt-auto">
                            <h4 class="text-end fw-bold text-danger">
                                NT$ @Html.DisplayFor(modelItem => item.DishPrice)
                            </h4>
                            @if (!string.IsNullOrEmpty(item.Note))
                            {
                                <p class="text-secondary small fst-italic">備註：@Html.DisplayFor(modelItem => item.Note)</p>
                            }
                        </div>
                    </div>

                    <div class="card-footer p-0">
                        <div class="d-grid gap-2">
                            <div class="btn-group">
                                <a class="btn btn btn-outline-dark" asp-action="" asp-route-id="@item.DishID"><i class="bi bi-cart2"></i> 加入購物車</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
