@model RestaurantSys.DTOs.DishDTO

@if (!string.IsNullOrEmpty(Model.PhotoPath))
{
    <img src="@Url.Content(Model.PhotoPath)"
         class="card-img-top"
         alt="@Model.DishName"
         style="width: 100%; height: 200px; object-fit: cover;" />
}
else
{
    <div class="d-flex flex-column justify-content-center align-items-center bg-light text-secondary"
         style="width: 100%; height: 200px; border: 1px dashed #ccc;">
        <i class="fas fa-camera fa-2x mb-2"></i>
        <span class="text-center">尚無圖片</span>
    </div>
}