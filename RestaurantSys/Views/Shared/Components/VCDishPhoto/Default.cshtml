@model RestaurantSys.ViewComponents.DishPhotoViewModel

@if (!string.IsNullOrEmpty(Model.PhotoPath))
{
    <img src="@Url.Content(Model.PhotoPath)"
         class="card-img-top"
         alt="@Model.DishName"
         style="width: 100%; height: 200px; object-fit: cover;" />
}
else
{
    <div class="no-photo-placeholder"
         style="width: 100%; height: 200px; display: flex; align-items: center; justify-content: center; background-color: #f0f0f0; color: #888; font-size: 14px; text-align: center; padding: 10px;">
        尚無照片
    </div>
}