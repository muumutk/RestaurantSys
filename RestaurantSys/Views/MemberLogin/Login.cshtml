@model RestaurantSys.ViewModels.VMMemberLogin

@{
    ViewData["Title"] = "會員登入";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 25rem;">
        <div class="card-body">
            <h2 class="fw-bold text-center mb-4">@ViewData["Title"]</h2>
            <hr />

            <form asp-controller="MemberLogin" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="EmailOrPhone" class="form-control" placeholder="電子郵件或手機號碼" />
                    <label asp-for="EmailOrPhone">電子郵件或手機號碼</label>
                    <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" type="password" placeholder="密碼" />
                    <label asp-for="Password">密碼</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @if (ViewData["Error"] != null)
                {
                    <div class="text-danger mb-3 text-center">
                        @ViewData["Error"]
                    </div>
                }

                <div class="d-grid gap-2">
                    <input type="submit" value="登入" class="btn btn-outline-dark fw-bold btn-lg" />

                    <a asp-action="Register" asp-controller="Register" class="btn btn-link">
                        <small>還沒有會員嗎？立即註冊</small>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-outline-secondary fw-bold" asp-controller="Menu" asp-action="Index">返回首頁</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}