@model RestaurantSys.Areas.Admin.ViewModels.VMDishIngredient

@{
    ViewData["Title"] = "編輯餐點食材";
}

<h1>編輯餐點食材：@Model.DishID</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DishID" />

            <h3>現有食材</h3>
            @if (Model.Items.Count > 0)
            {
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <div class="form-group mb-3">
                        <h4>@Html.DisplayFor(m => m.Items[i].ItemName)</h4>
                        <input type="hidden" asp-for="Items[i].ItemID" />

                        <label asp-for="Items[i].Quantity" class="control-label"></label>
                        <input asp-for="Items[i].Quantity" class="form-control" />
                        <span asp-validation-for="Items[i].Quantity" class="text-danger"></span>

                        <label asp-for="Items[i].Unit" class="control-label"></label>
                        <input asp-for="Items[i].Unit" class="form-control" />
                        <span asp-validation-for="Items[i].Unit" class="text-danger"></span>
                    </div>
                }
            }
            else
            {
                <p>此餐點目前沒有任何食材。</p>
            }

            <hr />
            <h3>新增食材</h3>

            <div class="form-group mb-3">
                <label asp-for="NewItemID" class="control-label"></label>
                <select asp-for="NewItemID" asp-items="Model.AllItems" class="form-control">
                    <option value="">-- 請選擇 --</option>
                </select>
                <span asp-validation-for="NewItemID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NewQuantity" class="control-label"></label>
                <input asp-for="NewQuantity" class="form-control" />
                <span asp-validation-for="NewQuantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NewUnit" class="control-label"></label>
                <input asp-for="NewUnit" id="modalUnit" class="form-control" />
                <span asp-validation-for="NewUnit" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const newItemSelect = document.getElementById('NewItemID');
            const newUnitInput = document.getElementById('NewUnit');

            newItemSelect.addEventListener('change', function() {
                // Get the selected option element
                const selectedOption = newItemSelect.options[newItemSelect.selectedIndex];

                // Check if a valid option is selected (not the "請選擇" option)
                if (selectedOption.value !== "") {
                    // Get the unit from a data attribute on the selected option
                    // Example: <option value="1" data-unit="g">番茄</option>
                    const unit = selectedOption.getAttribute('data-unit');

                    // Set the value of the unit input field
                    newUnitInput.value = unit || ''; // Use empty string if no data-unit is found
                } else {
                    // Clear the unit field if the user selects the "請選擇" option
                    newUnitInput.value = '';
                }
            });
        });
    </script>

}