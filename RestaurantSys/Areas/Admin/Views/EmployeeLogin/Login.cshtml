@model RestaurantSys.Areas.Admin.ViewModels.VMEmployeeLogin

@{
    ViewData["Title"] = "後台登入";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4" style="width: 25rem;">
        <div class="card-body">
            <h2 class="fw-bold text-center mb-4">@ViewData["Title"]</h2>
            <hr />

            <form asp-area="Admin" asp-controller="EmployeeLogin" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="EmployeeID" class="form-control" placeholder="員工編號" />
                    <label asp-for="EmployeeID">員工編號</label>
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" type="password" placeholder="密碼" />
                    <label asp-for="Password">密碼</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @if (ViewData["Error"] != null)
                {
                    <div class="text-danger mb-3 text-center">
                        @ViewData["Error"]
                    </div>
                }

                <div class="d-grid gap-2">
                    <input type="submit" value="登入" class="btn btn-outline-dark fw-bold btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-outline-secondary fw-bold" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">返回首頁</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}