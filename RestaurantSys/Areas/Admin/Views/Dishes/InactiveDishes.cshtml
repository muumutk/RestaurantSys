@model IEnumerable<RestaurantSys.DTOs.DishDTO>
@{
    ViewData["Title"] = "已下架餐點";
}

<h2 class="fw-bold">@ViewData["Title"]</h2>

<div class="d-flex justify-content-center mb-4 gap-3">
    <a class="btn btn-outline-dark" asp-action="Index">回到所有餐點列表</a>
</div>

<div class="container-fluid">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="card w-100 border-0 shadow-sm rounded-3">
                    <div class="position-relative">
                        @await Html.PartialAsync("_PhotoDisplayPartial", item)
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@Html.DisplayFor(modelItem => item.DishName)</h5>
                        <p class="card-text text-muted">@Html.DisplayFor(modelItem => item.Description)</p>

                            @if(!string.IsNullOrEmpty(item.Note))
                            {
                                <p class="text-secondary small fst-italic">@Html.DisplayFor(modelItem => item.Note)</p>
                            }
                    </div>

                    <div class="card-footer p-0">
                        <div class="d-grid gap-2">
                            <div class="btn-group">
                                <a class="btn btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.DishID" asp-route-source="InactiveDishes">編輯</a>
                                <a class="btn btn btn-outline-dark" asp-action="Details" asp-route-id="@item.DishID" asp-route-returnUrl="InactiveDishes">詳細</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


