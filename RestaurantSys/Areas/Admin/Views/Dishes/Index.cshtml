@model IEnumerable<RestaurantSys.DTOs.DishDTO>

@{
    ViewData["Title"] = "菜單餐點管理";
}

<div class="d-flex justify-content-center mb-4 gap-3">
    <a class="btn btn-outline-dark" asp-action="Create">新增餐點</a>
    <a class="btn btn-outline-dark" asp-controller="AdminHome" asp-action="Index">回到後台首頁</a>
    <a class="btn btn-outline-dark" asp-action="InactiveDishes">查看已下架餐點</a>
    <a class="btn btn-outline-dark" asp-controller="DishCategories" asp-action="Index">管理餐點分類</a>
</div>

<div class="container-fluid">
    <div class="row g-4 d-flex align-items-stretch">
        @if (Model != null && Model.Any())
        {
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="card w-100 border-0 shadow-sm rounded-3">
                    <div class="card-image-container position-relative">
                        @await Html.PartialAsync("_PhotoDisplayPartial", item)
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@Html.DisplayFor(modelItem => item.DishName)</h5>
                        <p class="card-text text-muted">@Html.DisplayFor(modelItem => item.Description)</p>
                        <div class="mt-auto">
                            @if (!string.IsNullOrEmpty(item.Note))
                            {
                                <p class="text-secondary small fst-italic">@Html.DisplayFor(modelItem => item.Note)</p>
                            }
                            <h4 class="text-end fw-bold text-danger">
                                NT$ @item.DishPrice.ToString("0")
                            </h4>
                        </div>
                    </div>

                    <div class="card-footer p-0 mt-auto flex-shrink-0">
                        <div class="d-grid gap-2">
                            <div class="btn-group">
                                <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.DishID" asp-route-source="active">編輯</a>
                                <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.DishID" asp-route-returnUrl="Index">詳細</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
        }
        else
        {
            <div class="alert alert-info text-center w-100" role="alert">
                目前沒有任何餐點資料。請點擊上方的「新增餐點」按鈕來添加新的餐點。
            </div>
        }
    </div>
</div>
