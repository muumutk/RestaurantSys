@{
    var returnAction = ViewData["ReturnUrl"] as string ?? "Index";
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.DishID">Edit</a> |
    <a asp-action="@returnAction">回到餐點列表</a>
</div>
