@model RestaurantSys.Models.Dish

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Dish</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DishName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DishName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DishPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DishPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
