@model IEnumerable<RestaurantSys.Models.StockBatch>

@{
    ViewData["Title"] = "進貨紀錄";
}

<h2 class="fw-bold">@ViewData["Title"]</h2>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">新增進貨紀錄</a>
    <a class="btn btn-outline-dark" asp-action="Expired">已過期紀錄</a>
</p>

<h4>
    <span class="badge bg-warning text-dark">即將到期（15天內）</span>
    <span class="badge bg-danger text-dark">即將到期（3天內）</span>
</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BatchNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.EmployeeID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            // 檢查到期日
            var isExpiringSoon = item.ExpiryDate.Date <= DateTime.Now.AddDays(15).Date;
            var isExpiringCritical = item.ExpiryDate.Date <= DateTime.Now.AddDays(3).Date;

            // 根據到期日判斷顯示的樣式
            var rowClass = "";
            if (isExpiringCritical)
            {
                rowClass = "table-danger"; // 3天內到期，標記為紅色
            }
            // 接著判斷次緊急的條件：15天內到期
            else if (isExpiringSoon)
            {
                rowClass = "table-warning"; // 15天內到期，標記為黃色
            }


            <tr class="@rowClass">
                <td>
                    @Html.DisplayFor(modelItem => item.BatchNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.EmployeeID)
                </td>
                <td>
                    <a class="btn btn-outline-dark btn-sm" asp-action="Edit" asp-route-id="@item.BatchID">編輯</a> |
                    <a class="btn btn-outline-dark btn-sm" asp-action="Details" asp-route-id="@item.BatchID">Details</a>
                </td>
            </tr>
}
    </tbody>
</table>

<div>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Stocks" asp-action="Index">回到庫存管理</a>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">回到後台首頁</a>
</div>
