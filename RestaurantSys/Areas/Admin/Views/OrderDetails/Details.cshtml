@model RestaurantSys.Models.Order

@{
    ViewData["Title"] = "訂單詳情";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>訂單資訊</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            訂單編號
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickUpTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickUpTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.MemberID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmployeeID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PayType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PayType.PayTypeID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus.OrderStatusID)
        </dd>
    </dl>

    <h4>訂單餐點明細</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    餐點名稱
                </th>
                <th>
                    單價
                </th>
                <th>
                    數量
                </th>
                <th>
                    小計
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => detail.Dish.DishName)
                    </td>
                    <td>
                        NT$ @Html.DisplayFor(modelItem => detail.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => detail.Quantity)
                    </td>
                    <td>
                        NT$ @(detail.UnitPrice* detail.Quantity)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3" class="text-right">
                    <strong>總計：</strong>
                </td>
                <td>
                    <strong>NT$ @Model.OrderDetails.Sum(od => od.UnitPrice * od.Quantity)</strong>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderID">Edit</a> |
    <a asp-controller="Orders" asp-action="Index">Back to List</a>
</div>