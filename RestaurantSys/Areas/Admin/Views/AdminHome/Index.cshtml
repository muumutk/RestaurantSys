@{
    ViewData["Title"] = "餐飲管理系統";
}

<h2 class="fw-bold">@ViewData["Title"]</h2>

@{
    // 從 ViewBag 讀取警示訊息
    var warnings = ViewBag.InventoryWarnings as List<string>;
}

@if (warnings != null && warnings.Any())
{
    <div class="modal fade" id="inventoryWarningModal" tabindex="-1" aria-labelledby="inventoryWarningModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="inventoryWarningModalLabel">庫存警示！</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>下列物品即將到期，請盡快處理：</p>
                    <hr>
                    <ul>
                        @foreach (var warning in warnings)
                        {
                            <li>@warning</li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row">
        <div class="container d-flex flex-wrap justify-content-center">
            <a asp-controller="Stocks" asp-action="Index" class="text-decoration-none">
                <div class="card mx-3 my-3" style="width: 20rem; height: 20rem;">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="fs-3 fw-bold"><i class="bi bi-box"></i> 庫存管理</h5>
                        <p class="card-text">追蹤食材庫存及庫存預警</p>
                    </div>
                </div>
            </a>

            <a asp-controller="StockBatches" asp-action="Index" class="text-decoration-none">
                <div class="card mx-3 my-3" style="width: 20rem; height: 20rem;">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="fs-3 fw-bold"><i class="bi bi-archive"></i> 進貨紀錄</h5>
                        <p class="card-text">追蹤每筆進貨</p>
                    </div>
                </div>
            </a>

            <a asp-controller="Employees" asp-action="Index" class="text-decoration-none">
                <div class="card mx-3 my-3" style="width: 20rem; height: 20rem;">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="fs-3 fw-bold"><i class="bi bi-person-check"></i> 員工帳號管理</h5>
                        <p class="card-text">新增員工帳號</p>
                    </div>
                </div>
            </a>

            <a asp-controller="Dishes" asp-action="Index" class="text-decoration-none">
                <div class="card mx-3 my-3" style="width: 20rem; height: 20rem;">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="fs-3 fw-bold"><i class="bi bi-egg-fried"></i> 餐點管理</h5>
                        <p class="card-text">編輯菜單、設定價格及管理餐點分類</p>
                    </div>
                </div>
            </a>

            <a asp-controller="Suppliers" asp-action="Index" class="text-decoration-none">
                <div class="card mx-3 my-3" style="width: 20rem; height: 20rem;">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="fs-3 fw-bold"><i class="bi bi-house-door"></i> 供應商</h5>
                        <p class="card-text">查詢所有供應商</p>
                    </div>
                </div>
            </a>

            <a asp-controller="Orders" asp-action="Index" class="text-decoration-none">
                <div class="card mx-3 my-3" style="width: 20rem; height: 20rem;">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="fs-3 fw-bold"><i class="bi bi-file-earmark-check"></i> 訂單</h5>
                        <p class="card-text">查看所有訂單</p>
                    </div>
                </div>
            </a>

            <a asp-controller="DishIngredients" asp-action="Index" class="text-decoration-none">
                <div class="card mx-3 my-3" style="width: 20rem; height: 20rem;">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="fs-3 fw-bold"><i class="bi bi-basket"></i> 原物料</h5>
                        <p class="card-text">檢視原物料</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @if (warnings != null && warnings.Any())
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var myModal = new bootstrap.Modal(document.getElementById('inventoryWarningModal'), {
                    keyboard: false
                });
                myModal.show();
            });
        </script>
    }
}