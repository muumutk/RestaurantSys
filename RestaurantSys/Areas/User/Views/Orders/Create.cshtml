@model RestaurantSys.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">訂單日期</label>
                <input name="OrderDate" class="form-control" readonly value="@ViewBag.OrderDate" />
            </div>
            <div class="form-group">
                <label asp-for="PickUpTime" class="control-label"></label>
                <select asp-for="PickUpTime"
                        class="form-control"
                        asp-items="ViewBag.PickUpTimeOptions">
                    <option value="">請選擇預計取餐時間</option>
                </select>
                <span asp-validation-for="PickUpTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayTypeID" class="control-label"></label>
                <select asp-for="PayTypeID" class ="form-control" asp-items="ViewBag.PayTypeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control" ></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="hidden" name="Cart" id="Cart" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#Cart').val(localStorage.getItem('cart'));
    </script>

}
