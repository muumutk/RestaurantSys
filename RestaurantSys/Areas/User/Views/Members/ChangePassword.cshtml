@model RestaurantSys.Areas.User.ViewModels.VMChangePassword

@{
    ViewData["Title"] = "變更密碼";
    Layout = "_Layout"; // 確保你的主版面配置（_Layout.cshtml）有正確的連結
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <h2 class="fw-bold text-center mb-4">@ViewData["Title"]</h2>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="ChangePassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="OldPassword" class="form-label fw-bold"></label>
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NewPassword" class="form-label fw-bold"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">確認變更</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">返回會員中心</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}