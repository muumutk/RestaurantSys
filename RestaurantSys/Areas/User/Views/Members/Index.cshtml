@model RestaurantSys.Models.Member

@{
    ViewData["Title"] = "會員中心";
}

<title>@ViewData["Title"]</title>

<link rel="stylesheet" href="~/css/member-center.css" />

<div class="gradient-bg text-white">
    <div class="container py-5">
        <div class="d-flex align-items-center mb-4">

            <form id="avatarUploadForm" enctype="multipart/form-data" class="me-4">
                <div class="position-relative">
                    @{
                        var avatarUrl = Model?.AvatarUrl ?? "https://via.placeholder.com/80";
                    }
                    <img id="avatarPreview" src="@avatarUrl" alt="會員頭像" class="avatar-img shadow-lg cursor-pointer">

                    <label for="avatarFile" class="position-absolute bottom-0 end-0 bg-sage-green d-flex justify-content-center align-items-center text-white avatar-btn cursor-pointer">
                        <i class="fas fa-camera"></i>
                    </label>
                    <input type="file" id="avatarFile" name="avatarFile" class="d-none" accept="image/*">

                    @if (!string.IsNullOrEmpty(Model?.AvatarUrl))
                    {
                        <div id="deleteAvatarBtn" class="position-absolute bottom-0 start-0 bg-danger d-flex justify-content-center align-items-center text-white avatar-btn cursor-pointer">
                            <i class="fas fa-trash-alt"></i>
                        </div>
                    }
                </div>
            </form>

            <div>
                <h1 class="h3 fw-bold">您好，@Model.Name</h1>
                <p class="text-white-50 mt-1">會員編號：@Html.DisplayFor(model => model.MemberID)</p>
                @* <div class="d-flex align-items-center mt-2">
                    <span class="badge text-white-50 border border-white me-2">@Html.DisplayFor(model => model.title)</span>
                    <span class="small">上次登入：@ViewData["LastLoginTime"]</span>
                </div> *@
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="bg-white info-card card-hover">
                <div class="d-flex align-items-center">
                    <div class="p-3 bg-warm-orange-light rounded-3">
                        <i class="fas fa-shopping-cart warm-orange fs-4"></i>
                    </div>
                    <div class="ms-3">
                        <p class="text-secondary mb-0">總訂單數</p>
                        <p class="fs-4 fw-bold text-dark mb-0">@ViewData["TotalOrders"]</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="bg-white info-card card-hover">
                <div class="d-flex align-items-center">
                    <div class="p-3 bg-warm-orange-light rounded-3">
                        <i class="fas fa-dollar-sign warm-orange fs-4"></i>
                    </div>
                    <div class="ms-3">
                        <p class="text-secondary mb-0">累計消費</p>
                        <p class="fs-4 fw-bold text-dark mb-0">$@ViewData["TotalSpending"]</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="bg-white info-card card-hover">
                <div class="d-flex align-items-center">
                    <div class="p-3 bg-warm-peach-light rounded-3">
                        <i class="fas fa-gift warm-peach fs-4"></i>
                    </div>
                    <div class="ms-3">
                        <p class="text-secondary mb-0">可用優惠券</p>
                        <p class="fs-4 fw-bold text-dark mb-0">@ViewData["AvailableCoupons"]</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="bg-white info-card card-hover">
                <div class="d-flex align-items-center">
                    <div class="p-3 bg-soft-coral-light rounded-3">
                        <i class="fas fa-star soft-coral fs-4"></i>
                    </div>
                    <div class="ms-3">
                        <p class="text-secondary mb-0">會員積分</p>
                        <p class="fs-4 fw-bold text-dark mb-0">@ViewData["MemberPoints"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="bg-white rounded-3 shadow-sm mb-4">
                <div class="p-4 border-bottom border-gray-200">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="h5 fw-bold mb-0">最近訂單</h2>
                        <a asp-controller="Orders" asp-action="Index" class="text-decoration-none text-warm-orange fw-bold small">查看全部</a>
                    </div>
                </div>
                <div class="p-4">
                    @if (ViewData["RecentOrders"] != null && ((IEnumerable<dynamic>)ViewData["RecentOrders"]).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var order in (IEnumerable<dynamic>)ViewData["RecentOrders"])
                            {
                                <div class="list-group-item d-flex align-items-center justify-content-between bg-light rounded mb-2">
                                    <div class="d-flex align-items-center">
                                        <div class="d-flex justify-content-center align-items-center p-3 bg-warm-orange-light rounded me-3">
                                            <i class="fas fa-utensils warm-orange"></i>
                                        </div>
                                        <div>
                                            <p class="fw-bold mb-0">訂單 #@order.OrderID</p>
                                            <small class="text-muted">@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</small>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <p class="fw-bold mb-0">$@order.TotalPrice</p>
                                        <span class="badge status-badge
                                                    @(order.Status == "已完成" ? "bg-sage-green-light text-sage-green" :
                                                                                              order.Status == "配送中" ? "bg-warm-peach-light text-warm-peach" :
                                                                                              "bg-soft-coral-light text-soft-coral")">
                                    @order.Status
                                </span>
                            </div>
                        </div>
                                                }
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted">尚無最近的訂單紀錄。</p>
                    }
                </div>
            </div>

            <div class="bg-white rounded-3 shadow-sm">
                <div class="p-4 border-bottom border-gray-200">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="h5 fw-bold mb-0">個人資料</h2>
                        <a asp-action="Edit" asp-route-id="@Model.MemberID" class="text-decoration-none text-warm-orange fw-bold small">編輯</a>
                    </div>
                </div>
                <div class="p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label text-secondary mb-1">電子郵件</label>
                            <p class="text-dark">@Html.DisplayFor(model => model.MEmail)</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-secondary mb-1">聯絡電話</label>
                            <p class="text-dark">@Html.DisplayFor(model => model.MemberTel)</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-secondary mb-1">生日</label>
                            <p class="text-dark">@Html.DisplayFor(model => model.Birthday)</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-secondary mb-1">地址</label>
                            <p class="text-dark">@Html.DisplayFor(model => model.City) @Html.DisplayFor(model => model.Address)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="bg-white rounded-3 shadow-sm">
                <div class="p-4 border-bottom border-gray-200">
                    <h2 class="h5 fw-bold mb-0">快速功能</h2>
                </div>
                <div class="p-4 quick-links">
                    <a asp-controller="Orders" asp-action="Index" class="d-flex align-items-center p-3 rounded text-decoration-none text-dark hover-bg-light">
                        <div class="d-flex justify-content-center align-items-center p-3 bg-warm-orange-light rounded me-3">
                            <i class="fas fa-receipt warm-orange"></i>
                        </div>
                        <span class="fw-bold">我的訂單</span>
                        <i class="fas fa-chevron-right text-secondary ms-auto"></i>
                    </a>
                    <a href="#" class="d-flex align-items-center p-3 rounded text-decoration-none text-dark hover-bg-light">
                        <div class="d-flex justify-content-center align-items-center p-3 bg-sage-green-light rounded me-3">
                            <i class="fas fa-gift sage-green"></i>
                        </div>
                        <span class="fw-bold">我的優惠券</span>
                        <i class="fas fa-chevron-right text-secondary ms-auto"></i>
                    </a>
                    <a href="#" class="d-flex align-items-center p-3 rounded text-decoration-none text-dark hover-bg-light">
                        <div class="d-flex justify-content-center align-items-center p-3 bg-soft-coral-light rounded me-3">
                            <i class="fas fa-star soft-coral"></i>
                        </div>
                        <span class="fw-bold">積分兌換</span>
                        <i class="fas fa-chevron-right text-secondary ms-auto"></i>
                    </a>
                    <a href="#" class="d-flex align-items-center p-3 rounded text-decoration-none text-dark hover-bg-light">
                        <div class="d-flex justify-content-center align-items-center p-3 bg-warm-peach-light rounded me-3">
                            <i class="fas fa-map-marker-alt warm-peach"></i>
                        </div>
                        <span class="fw-bold">收件地址</span>
                        <i class="fas fa-chevron-right text-secondary ms-auto"></i>
                    </a>
                    <a href="#" class="d-flex align-items-center p-3 rounded text-decoration-none text-dark hover-bg-light">
                        <div class="d-flex justify-content-center align-items-center p-3 bg-warm-brown-light rounded me-3">
                            <i class="fas fa-lock warm-brown"></i>
                        </div>
                        <span class="fw-bold">變更密碼</span>
                        <i class="fas fa-chevron-right text-secondary ms-auto"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const uploadUrl = '@Url.Action("UploadAvatar", "Members")';

        // 監聽檔案選擇事件
        document.getElementById('avatarFile').addEventListener('change', async function(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('avatarPreview').src = e.target.result;
            };
            reader.readAsDataURL(file);

            const formData = new FormData();
            formData.append('avatarFile', file);

            try {
                const response = await fetch(uploadUrl, {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const result = await response.json();
                    console.log(result.message);
                    document.getElementById('avatarPreview').src = result.avatarUrl;

                    if (!document.getElementById('deleteAvatarBtn')) {
                        const deleteBtnHtml = `
                            <div id="deleteAvatarBtn" class="position-absolute bottom-0 start-0 bg-danger d-flex justify-content-center align-items-center text-white avatar-btn cursor-pointer">
                                <i class="fas fa-trash-alt"></i>
                            </div>
                        `;
                        const relativeDiv = document.querySelector('form#avatarUploadForm .position-relative');
                        relativeDiv.insertAdjacentHTML('beforeend', deleteBtnHtml);
                        attachDeleteEvent();
                    } else {
                         document.getElementById('deleteAvatarBtn').style.display = 'flex';
                    }
                } else {
                    const error = await response.text();
                    console.error("上傳失敗：", error);
                    alert("頭像上傳失敗，請檢查檔案類型與大小。");
                }
            } catch (error) {
                console.error('上傳過程中發生錯誤：', error);
                alert("上傳過程中發生網路錯誤。");
            }
        });

        // 刪除頭像功能
        function attachDeleteEvent() {
            const deleteBtn = document.getElementById('deleteAvatarBtn');
            if (deleteBtn) {
                deleteBtn.addEventListener('click', async function() {
                    if (!confirm('確定要刪除頭像嗎？')) {
                        return;
                    }

                    try {
                        const response = await fetch('/User/Members/DeleteAvatar', {
                            method: 'POST'
                        });

                        if (response.ok) {
                            const result = await response.json();
                            alert(result.message);
                            document.getElementById('avatarPreview').src = 'https://via.placeholder.com/80';
                            this.style.display = 'none';
                        } else {
                            const error = await response.text();
                            console.error("刪除失敗：", error);
                            alert("刪除失敗，請稍後再試。");
                        }
                    } catch (error) {
                        console.error('刪除過程中發生錯誤：', error);
                        alert("刪除過程中發生網路錯誤。");
                    }
                });
            }
        }

        attachDeleteEvent();
    </script>
}