@model RestaurantSys.Models.Member

@{
    ViewData["Title"] = "會員中心";
}


<title>@ViewData["Title"]</title>


<body class="bg-gray-50 min-h-screen">
    <div class="gradient-bg text-white">
        <div class="max-w-7xl mx-auto px-4 py-8">
            <div class="flex items-center space-x-6">

                <form id="avatarUploadForm" enctype="multipart/form-data">
                    <div class="relative">
                        @{
                            // 從會員模型中取得頭像路徑，如果沒有則使用預設圖片
                            var avatarUrl = Model?.AvatarUrl ?? "https://via.placeholder.com/80";
                        }
                        <img id="avatarPreview" src="@avatarUrl" alt="會員頭像" class="w-20 h-20 rounded-full border-4 border-white shadow-lg cursor-pointer">

                        <label for="avatarFile" class="absolute -bottom-1 -right-1 w-6 h-6 bg-green-400 rounded-full border-2 border-white cursor-pointer flex items-center justify-center text-white">
                            <i class="fas fa-camera"></i>
                        </label>
                        <input type="file" id="avatarFile" name="avatarFile" class="hidden" accept="image/*">

                        @if (!string.IsNullOrEmpty(Model?.AvatarUrl))
                        {
                            <div id="deleteAvatarBtn" class="absolute -bottom-1 -left-1 w-6 h-6 bg-red-500 rounded-full border-2 border-white cursor-pointer flex items-center justify-center text-white">
                                <i class="fas fa-trash-alt"></i>
                            </div>
                        }
                    </div>
                </form>

                <div>
                    <h1 class="text-3xl font-bold">您好，@Model.Name</h1>
                    <p class="text-blue-100 mt-1">會員編號：@Html.DisplayFor(model => model.MemberID)</p>
                    <div class="flex items-center mt-2 space-x-4">
                        <span class="bg-white/20 px-3 py-1 rounded-full text-sm">@Html.DisplayFor(model => model.title)</span>
                        <span class="text-sm">上次登入：@ViewData["LastLoginTime"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                <div class="flex items-center">
                    <div class="p-3 bg-blue-100 rounded-lg">
                        <i class="fas fa-shopping-cart text-blue-600 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-500 text-sm">總訂單數</p>
                        <p class="text-2xl font-bold text-gray-900">@ViewData["TotalOrders"]</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                <div class="flex items-center">
                    <div class="p-3 bg-green-100 rounded-lg">
                        <i class="fas fa-dollar-sign text-green-600 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-500 text-sm">累計消費</p>
                        <p class="text-2xl font-bold text-gray-900">$@ViewData["TotalSpending"]</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                <div class="flex items-center">
                    <div class="p-3 bg-yellow-100 rounded-lg">
                        <i class="fas fa-gift text-yellow-600 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-500 text-sm">可用優惠券</p>
                        <p class="text-2xl font-bold text-gray-900">@ViewData["AvailableCoupons"]</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                <div class="flex items-center">
                    <div class="p-3 bg-purple-100 rounded-lg">
                        <i class="fas fa-star text-purple-600 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-500 text-sm">會員積分</p>
                        <p class="text-2xl font-bold text-gray-900">@ViewData["MemberPoints"]</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-6">
                <div class="bg-white rounded-xl shadow-sm">
                    <div class="p-6 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <h2 class="text-xl font-semibold text-gray-900">最近訂單</h2>
                            <a asp-controller="Orders" asp-action="Index" class="text-blue-600 hover:text-blue-700 text-sm font-medium">查看全部</a>
                        </div>
                    </div>
                    <div class="p-6">
                        @if (ViewData["RecentOrders"] != null && ((IEnumerable<dynamic>)ViewData["RecentOrders"]).Any())
                        {
                            <div class="space-y-4">
                                @foreach (var order in (IEnumerable<dynamic>)ViewData["RecentOrders"])
                                {
                                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                                        <div class="flex items-center space-x-4">
                                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                                <i class="fas fa-utensils text-blue-600"></i>
                                            </div>
                                            <div>
                                                <p class="font-medium text-gray-900">訂單 #@order.OrderID</p>
                                                <p class="text-sm text-gray-500">@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <p class="font-semibold text-gray-900">$@order.TotalPrice</p>
                                            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
                                                            @(order.Status == "已完成" ? "bg-green-100 text-green-800" :
                                                                                                        order.Status == "配送中" ? "bg-yellow-100 text-yellow-800" :
                                                                                                        "bg-red-100 text-red-800")">
                                        @order.Status
                                    </span>
                                </div>
                            </div>
                                                        }
                            </div>
                        }
                        else
                        {
                            <p class="text-center text-gray-500">尚無最近的訂單紀錄。</p>
                        }
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm">
                    <div class="p-6 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <h2 class="text-xl font-semibold text-gray-900">個人資料</h2>
                            <a asp-action="Edit" asp-route-id="@Model.MemberID" class="text-blue-600 hover:text-blue-700 text-sm font-medium">編輯</a>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">電子郵件</label>
                                <p class="text-gray-900">@Html.DisplayFor(model => model.MEmail)</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">聯絡電話</label>
                                <p class="text-gray-900">@Html.DisplayFor(model => model.MemberTel)</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">生日</label>
                                <p class="text-gray-900">@Html.DisplayFor(model => model.Birthday)</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">會員等級</label>
                                <p class="text-gray-900">@Html.DisplayFor(model => model.title)</p>
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-sm font-medium text-gray-700 mb-1">地址</label>
                                <p class="text-gray-900">@Html.DisplayFor(model => model.City) @Html.DisplayFor(model => model.Address)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-white rounded-xl shadow-sm">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-semibold text-gray-900">快速功能</h2>
                    </div>
                    <div class="p-6">
                        <div class="space-y-3">
                            <a asp-controller="Orders" asp-action="Index" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                                    <i class="fas fa-receipt text-blue-600"></i>
                                </div>
                                <span class="ml-3 font-medium text-gray-900">我的訂單</span>
                                <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
                            </a>
                            <a href="#" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors">
                                    <i class="fas fa-gift text-green-600"></i>
                                </div>
                                <span class="ml-3 font-medium text-gray-900">我的優惠券</span>
                                <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
                            </a>
                            <a href="#" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200 transition-colors">
                                    <i class="fas fa-star text-purple-600"></i>
                                </div>
                                <span class="ml-3 font-medium text-gray-900">積分兌換</span>
                                <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
                            </a>
                            <a href="#" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center group-hover:bg-yellow-200 transition-colors">
                                    <i class="fas fa-map-marker-alt text-yellow-600"></i>
                                </div>
                                <span class="ml-3 font-medium text-gray-900">收件地址</span>
                                <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
                            </a>
                            <a href="#" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center group-hover:bg-red-200 transition-colors">
                                    <i class="fas fa-lock text-red-600"></i>
                                </div>
                                <span class="ml-3 font-medium text-gray-900">變更密碼</span>
                                <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script>
        const uploadUrl = '@Url.Action("UploadAvatar", "Members")';

        // 監聽檔案選擇事件
        document.getElementById('avatarFile').addEventListener('change', async function(event) {
            const file = event.target.files[0];
            if (!file) return;

            // 步驟1: 立即顯示預覽圖，提供良好使用者體驗
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('avatarPreview').src = e.target.result;
            };
            reader.readAsDataURL(file);

            // 步驟2: 準備上傳資料
            const formData = new FormData();
            formData.append('avatarFile', file);

            // 步驟3: 非同步上傳到後端
            try {
                const response = await fetch(uploadUrl, {
                    method: 'POST',
                    body: formData
                });

                // 步驟4: 處理後端回傳結果
                if (response.ok) {
                    const result = await response.json();
                    console.log(result.message);
                    // 上傳成功，更新頁面上所有會員頭像的圖片來源
                    // 這行可以確保導覽列上的頭像也能即時更新
                    document.getElementById('avatarPreview').src = result.avatarUrl;
                } else {
                    const error = await response.text();
                    console.error("上傳失敗：", error);
                    alert("頭像上傳失敗，請檢查檔案類型與大小。");
                }
            } catch (error) {
                console.error('上傳過程中發生錯誤：', error);
                alert("上傳過程中發生網路錯誤。");
            }
        });


                // 新增刪除頭像的 JavaScript
        const deleteBtn = document.getElementById('deleteAvatarBtn');
        if (deleteBtn) {
            deleteBtn.addEventListener('click', async function() {
                if (!confirm('確定要刪除頭像嗎？')) {
                    return;
                }

                try {
                    const response = await fetch('/User/Members/DeleteAvatar', {
                        method: 'POST'
                    });

                    if (response.ok) {
                        const result = await response.json();
                        alert(result.message);
                        // 刪除成功後，更新頭像預覽為預設圖片
                        document.getElementById('avatarPreview').src = 'https://via.placeholder.com/80';
                        // 隱藏刪除按鈕
                        deleteBtn.style.display = 'none';
                    } else {
                        const error = await response.text();
                        console.error("刪除失敗：", error);
                        alert("刪除失敗，請稍後再試。");
                    }
                } catch (error) {
                    console.error('刪除過程中發生錯誤：', error);
                    alert("刪除過程中發生網路錯誤。");
                }
            });
        }


    </script>

}